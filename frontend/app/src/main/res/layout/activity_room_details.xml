<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Price and Booking Button Widget -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/dollar_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="16dp"
            android:text="$"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:text="100"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/dollar_sign" />

        <TextView
            android:id="@+id/night_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:text="/ night"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/price_value" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Photo Gallery -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:id="@+id/photo_scroll_view">

                <LinearLayout
                    android:id="@+id/photo_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Example Images -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="250dp"
                            android:layout_marginEnd="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="250dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/img_1"
                            android:scaleType="centerCrop" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="250dp"
                            android:src="@drawable/img_2"
                            android:scaleType="centerCrop" />
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Room Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:text="Maria's Room"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Room Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/room_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A cozy room with a beautiful view."
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:paddingStart="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <!-- Location -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Rethymno, Crete"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    app:layout_flexGrow="0.6"/>

            </LinearLayout>

            <!-- Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="8dp" />


                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:justifyContent="flex_start">

                    <!-- Each detail item as a child of FlexboxLayout -->

                    <!-- Max Visitors -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/people_icon"
                        app:layout_flexGrow="0"/>

                    <TextView
                        android:id="@+id/max_visitors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 4"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        app:layout_flexGrow="0.1"/>

                    <TextView
                        android:id="@+id/people_bullet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ "
                        android:textSize="16sp"
                        android:textColor="#666666"
                        app:layout_flexGrow="0.1"/>

                    <!-- Number of Rooms -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/room_icon"
                        app:layout_flexGrow="0"/>

                    <TextView
                        android:id="@+id/num_rooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="3"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        app:layout_flexGrow="0.1"/>

                    <TextView
                        android:id="@+id/rooms_bullet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ "
                        android:textSize="16sp"
                        android:textColor="#666666"
                        app:layout_flexGrow="0.1"/>

                    <!-- Number of Bathrooms -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/bathroom_icon"
                        app:layout_flexGrow="0"/>

                    <TextView
                        android:id="@+id/num_bathrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="2"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        app:layout_flexGrow="1"/>

                </com.google.android.flexbox.FlexboxLayout>

            <!-- Room Availability Calendar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mcv_showOtherDates="all"
                android:paddingBottom="16dp" />

            <!-- Map -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/map_container">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:context=".RoomDetailsActivity" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

