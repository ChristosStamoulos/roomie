<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/room_bg"
    android:elevation="4dp"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/istockphoto_904608018_612x612_removebg_preview"
        app:layout_constraintBottom_toTopOf="@+id/roomArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/roomImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roomArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:text="Area"
        app:layout_constraintBottom_toTopOf="@+id/roomDesc"
        app:layout_constraintEnd_toStartOf="@+id/roomStars"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/roomStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        android:text="stars"
        app:layout_constraintBottom_toTopOf="@+id/roomDesc"
        app:layout_constraintStart_toEndOf="@+id/roomArea"
        app:layout_constraintTop_toBottomOf="@+id/roomImage" />

    <TextView
        android:id="@+id/roomDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="314dp"
        android:text="Tap to view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomArea" />
</androidx.constraintlayout.widget.ConstraintLayout>