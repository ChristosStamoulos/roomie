<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.HomeScreenActivity"
    android:background="@drawable/backg"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="649dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-3dp">

        <LinearLayout
            android:id="@+id/wraperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/offwhite"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/uper_layout"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginTop="-290dp"
                android:background="@drawable/shadowCircle"
                android:elevation="60dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="310dp"
                    android:src="@drawable/accountblacl">

                </ImageView>


                <TextView
                    android:id="@+id/yourAccinfoname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:baselineAligned="false"
                    android:text="@string/example_name"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="@string/your_account_information"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/shadow_shape"
                android:elevation="80dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/full_name"
                    android:textColor="@color/mehhblack"/>

                <TextView
                    android:id="@+id/fullnameacc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/full_name"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/mehhblack" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/myaccphonenum"
                    android:textColor="@color/mehhblack"/>

                <TextView
                    android:id="@+id/phonenumberacc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/phone_number"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/mehhblack" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/username"
                    android:textColor="@color/mehhblack"/>

                <TextView
                    android:id="@+id/usernameacc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/username"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/mehhblack" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/prompt_email"
                    android:textColor="@color/mehhblack"/>

                <TextView
                    android:id="@+id/emailacc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/email_example"
                    android:textColor="@color/mehhblack"
                    android:textSize="20sp"/>

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/mehhblack" />

                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/offwhite" />

                <Button
                    android:id="@+id/logout"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/light_black"
                    android:text="@string/log_out"
                    android:textAllCaps="false"
                    android:textColor="@color/offwhite"
                    android:textSize="20sp" />


                <View
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/offwhite" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_nav_bg"
        app:elevation="10dp"
        app:itemIconSize="25dp"
        app:itemIconTint="@drawable/bottom_nav_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:menu="@menu/activity_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>
