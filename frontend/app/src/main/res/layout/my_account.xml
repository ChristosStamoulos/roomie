<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:background="#4d5eae" android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="20dp"
                android:background="@null"
                android:src="@drawable/_894660_arrow_left_back_previous_direction_icon__1_" />

            <ImageView
                android:id="@+id/personalimg"
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/project_172_10_generated_removebg_preview" />



        </LinearLayout>


        <TextView
            android:id="@+id/accountdata"
            android:layout_width="300dp"
            android:textAlignment="center"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="20dp"
            android:text="@string/your_personal_data"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily=""
            app:layout_constraintBottom_toTopOf="@+id/roomDesc"
            app:layout_constraintEnd_toStartOf="@+id/roomStars"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:textColorHint="@color/white"
            android:gravity="center"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#f05d00"
            app:expandedHintEnabled="false"
            app:cursorColor="#f05d00"
            app:hintTextColor="#f05d00"
            app:hintEnabled="true"
            app:boxCornerRadiusBottomEnd="30sp"
            app:boxCornerRadiusBottomStart="30sp"
            app:boxCornerRadiusTopEnd="30sp"
            app:boxCornerRadiusTopStart="30sp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/myacc_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="arial"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/prompt_password"
            app:expandedHintEnabled="false"
            android:textColorHint="@color/white"
            app:boxStrokeColor="#f05d00"
            app:cursorColor="#f05d00"
            app:hintTextColor="#f05d00"
            app:boxBackgroundMode="outline"
            app:passwordToggleEnabled="true"
            app:boxCornerRadiusBottomEnd="30sp"
            app:boxCornerRadiusBottomStart="30sp"
            app:boxCornerRadiusTopEnd="30sp"
            app:boxCornerRadiusTopStart="30sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/myacc_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="arial"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_number"
            android:textColorHint="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#f05d00"
            app:cursorColor="#f05d00"
            app:hintTextColor="#f05d00"
            app:expandedHintEnabled="false"
            app:boxCornerRadiusBottomEnd="30sp"
            app:boxCornerRadiusBottomStart="30sp"
            app:boxCornerRadiusTopEnd="30sp"
            app:boxCornerRadiusTopStart="30sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/myacc_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="arial"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            android:layout_marginTop="16dp"
            android:hint="@string/prompt_email"
            android:textColorHint="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#f05d00"
            app:cursorColor="#f05d00"
            app:hintTextColor="#f05d00"
            app:boxCornerRadiusBottomEnd="30sp"
            app:boxCornerRadiusBottomStart="30sp"
            app:boxCornerRadiusTopEnd="30sp"
            app:boxCornerRadiusTopStart="30sp"
            android:fillViewport="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/myacc_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="arial"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnchange"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:backgroundTint="#D36B00"
            android:fontFamily="arial"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp"
            android:text="@string/change_account_information"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            android:textSize="15sp"
            app:cornerRadius="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="192dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="#D36B00"
            android:fontFamily="arial"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/log_out"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            android:textSize="20sp"
            app:cornerRadius="30sp" />


    </LinearLayout>

</ScrollView>