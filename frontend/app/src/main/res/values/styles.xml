<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other theme attributes -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:fontFamily">@font/jost_semibold_italic</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@android:color/holo_red_dark</item>
        <item name="searchIcon">@null</item>
    </style>
</resources>